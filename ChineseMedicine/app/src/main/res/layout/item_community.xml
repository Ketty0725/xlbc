<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:padding="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:transitionName="image"/>

    <com.ketty.chinesemedicine.component.SmoothCheckBox
        android:id="@+id/scb"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:visibility="gone"
        android:layout_alignTop="@+id/iv_cover"
        android:layout_alignEnd="@+id/iv_cover"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:color_checked="@color/red"
        app:color_tick="@color/white"
        app:color_unchecked="@color/white"
        app:color_unchecked_stroke="#DCDCDC"
        app:stroke_width="1dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cover"
        android:layout_marginVertical="5dp"
        android:text="@string/app_name"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/head_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/head_icon"
        android:layout_alignTop="@+id/head_icon"
        android:layout_alignBottom="@+id/head_icon"
        android:gravity="center"
        android:text="TextView"
        android:textSize="10sp"
        android:textColor="#999999"/>

</RelativeLayout>